<div class="container profile-container">
   <div class="row">
      <div class="col-md-4 text-center">
         <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
      </div>
      
      <div class="col-md-6 block-profile-col">
         <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
         <h3> <span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
         <div class="well profile-well profile-description">
            <h3>Description</h3>
            <%= @user.profile.description %>
         </div>
         
            <div class="well profile-well profile-contact-info">
               <h3>Contact Information</h3>
               <%= @user.profile.phone_number %> <br>
               <%= @user.profile.contact_email %> <br>
            </div>
      
      </div>
      <div class="col-sm-2">
         <% if @user.plan_id == 2 %>
         <p class="pro-profile-text">PRO</p>
         <% end %>
      </div>
         
      <% if current_user == @user %>
         <% if current_user.plan_id == 2 %>
            <div class="col-sm-2">
               <%= link_to "Edit Profile", edit_user_profile_path(current_user.id), class: 'btn btn-warning profile-btn' %>
            </div>
            
         <% else %>
            <div class="col-sm-2">
               <%= link_to "Edit Profile", edit_user_profile_path(current_user.id), class: 'btn btn-warning basic-profile-btn' %>
            </div>
            
         <% end %>
         
      <% end %>
   </div>
</div>