<div class= "container">
   <h1 class= "text-center">Users</h1> <br>
   <% @users.each do |user| %> <br>
      <% if user.profile %>
         <%= link_to user do%>
            <div class="container profile-container index-container">
               <div class="row">
                  <ul>
                     <div class="col-sm-2 text-center">
                        <%= image_tag user.profile.avatar.url, class: 'avatar-show-img index-img' %>
                     </div>
                     
                     <div class="col-sm-6 block-profile-col index-profile-col">
                        <h1><%= user.profile.first_name %> <%= user.profile.last_name %></h1>
                        <h3> <%= user.profile.job_title %></h3>
                       <!-- <div class="well profile-well profile-description">
                           <h3>Description</h3>
                           <%= user.profile.description %> -->
                     </div>
                     <div class="col-sm-2 col-sm-offset-2">
                        <% if user.plan_id == 2 %>
                           <p class="pro-profile-text">PRO</p>
                        <% end %>
                     </div>
                  </ul>
               </div>
            </div>
         <% end %>
      <% end %>
   <% end %>
</div>
 